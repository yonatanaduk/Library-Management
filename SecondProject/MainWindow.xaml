<Window x:Class="SecondProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecondProject" xmlns:usercontrols="clr-namespace:SecondProject.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <usercontrols:TextBoxView Grid.RowSpan="2"/>
        <usercontrols:ListViewView Grid.Column="1" Grid.RowSpan="2"  VerticalAlignment="Top"/>
        <usercontrols:FilterView Grid.Column="2" Grid.RowSpan="2" VerticalAlignment="Top" />

    </Grid>

</Window>
